<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bb"
    tools:context="com.example.harshi.is.Main2Activity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:text="RAJEEV INSTITUTE OF TECHNOLOGY,HASSAN."
        android:textColor="@android:color/black"
        android:textSize="19dp"
        android:textStyle="bold"
        android:fontFamily="serif"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/rit" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:text="DEPARTMENT OF ISE"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:fontFamily="serif-monospace"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/image7" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:text="presents"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:fontFamily="monospace"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gif"
        android:layout_centerInParent="true"
        android:text="Artificially Thinking Coded Machines."
        android:textColor="@android:color/widget_edittext_dark"
        android:textSize="25dp"
        android:textStyle="bold"
        android:fontFamily="cursive"/>



    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif"
        android:layout_below="@id/textView5"
        android:layout_centerInParent="true"
        android:layout_width="75dp"
        android:layout_height="59dp"
        android:background="@android:color/darker_gray"
        android:src="@drawable/atom" />


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif1"
        android:layout_width="240dp"
        android:layout_height="180dp"
        android:layout_alignEnd="@+id/textView4"
        android:layout_below="@+id/linearLayout"
        android:background="@android:color/darker_gray"
        android:src="@drawable/atom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/textView6"
        android:id="@+id/linearLayout"
        android:orientation="horizontal">


        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="home"
            android:fontFamily="serif"
            android:textColor="@android:color/holo_blue_dark"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gallery"
            android:fontFamily="serif"
            android:textColor="@android:color/holo_blue_dark"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="news"
            android:fontFamily="serif"
            android:textColor="@android:color/holo_blue_dark"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="about"
            android:fontFamily="serif"
            android:textColor="@android:color/holo_blue_dark"/>




    </LinearLayout>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="Copyrights Â© Department of ISE" />



</RelativeLayout>
