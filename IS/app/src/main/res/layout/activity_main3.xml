<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ddd"
    tools:context="com.example.harshi.is.Main3Activity">

               <ImageView
                   android:id="@+id/im1"
                   android:layout_width="match_parent"
                   android:layout_height="100dp"
                   android:background="@drawable/image2" />


                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/gif"
                    android:layout_below="@id/im1"
                    android:layout_width="75dp"
                    android:layout_height="55dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/black"
                    android:src="@drawable/atom" />


                <TextView
                    android:layout_below="@id/gif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Artificially Thinking cOded Machines"
                    android:fontFamily="serif-monospace"
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="#000"
                    android:typeface="monospace"
                    android:id="@+id/textView8" />


                <TextView
                    android:id="@+id/textView9"
                    android:layout_below="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif-monospace"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:clickable="true"
                    android:onClick="dise"
                    android:textColor="#000"
                    android:text="Department of Information Science" />


                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_centerInParent="true"
                    android:fontFamily="serif-monospace"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:text="Feedback"
                    android:clickable="true"
                    android:onClick="sendFeedback"
                    android:layout_below="@id/textView9"/>

    <TextView
        android:id="@+id/tv0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:fontFamily="serif-monospace"
        android:text="About ATOM CLUB"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

<LinearLayout
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_below="@+id/tv0"
    android:gravity="center">


    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="serif-monospace"
        android:text="About "
        android:textColor="#09095b"
        android:textStyle="bold" />

</LinearLayout>




    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif-monospace"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="Copyrights Â© Department of ISE" />



</RelativeLayout>
