<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ii"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context="com.example.harshi.is.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:fontFamily="serif"
        android:text="WELCOME TO ISE HUB"
        android:layout_centerInParent="true"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView1"
        android:layout_alignEnd="@+id/textView"
        android:fontFamily="serif"
        android:layout_centerInParent="true"
        android:text="Department of ISE"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/gifImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:background="@color/colorPrimary"
        app:srcCompat="@drawable/is" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:src="@drawable/iii" />


    <Button
        android:id="@+id/button"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:text="ISE"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:text="Copyrights Â© Department of ISE" />



</RelativeLayout>
